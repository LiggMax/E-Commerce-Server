<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ligg.apiadmin.mapper.UserManagementMapper">
    <!-- 更新用户状态 -->
    <update id="updateUserStatus">
        update user
        set status = #{status}
        where user_id = #{userId}
    </update>

    <!-- 查询用户列表 -->
    <select id="selectUserList" resultType="com.ligg.apiadmin.pojo.UserManagementVo">
        select user_id,
               nick_name,
               account,
               avatar,
               role,
               status,
               email,
               last_login_time,
               account_balance,
               create_time
        from user u
    </select>
</mapper>